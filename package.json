{
  "name": "waxwatch-web",
  "version": "1.0.0",
  "type": "module",
  "description": "React Default Application",
  "main": "index.js",
  "scripts": {
    "build": "node ./node_modules/next/dist/bin/next build",
    "dev": "node ./node_modules/next/dist/bin/next dev",
    "e2e": "playwright test",
    "e2e:docker": "docker compose -f docker-compose.e2e.yml run --rm e2e",
    "e2e:ci": "start-server-and-test start http://127.0.0.1:4173 e2e",
    "format": "prettier . --write",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "prepare": "husky",
    "start": "node scripts/start-standalone.mjs",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "prebuild": "node scripts/env-contract.mjs",
    "test:coverage": "vitest run",
    "a11y:smoke": "playwright test e2e/a11y.spec.ts",
    "bundle:check": "node scripts/check-bundle-budget.mjs",
    "verify:deployment": "node scripts/verify-deployment.mjs",
    "ci:prod-gates": "npm run test:coverage && npm run build && npm run bundle:check && npm run a11y:smoke && npm run verify:deployment && npm run release:checklist",
    "release:checklist": "node scripts/release-checklist.mjs"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,yml,yaml,css}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "next": "^15.5.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^6.1.1",
    "client-only": "file:vendor/client-only"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/ui": "^4.0.18",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "start-server-and-test": "^2.1.3",
    "typescript": "^5.2.2",
    "vitest": "^4.0.18"
  }
}
